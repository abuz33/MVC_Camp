@using EntityLayer.Concrete
@model List<Admin>
@{
    ViewBag.Title = "Admin Authorizations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Change or Take the roles of Admins</h2>
<br />
<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Heading Operations</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="col-md-12">

                <br />
                <table id="example1" class="table table-striped table-bordered dt-responsive nowrap" style="width: 100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Admin Mail</th>
                            <th>Admin Role</th>
                            <th>Status</th>
                            <th>Take the Role</th>
                            <th>Change the Role</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            <tr>
                                <td>@x.AdminId</td>
                                <td>@x.AdminUserName</td>
                                <td>@x.AdminRole</td>
                                <td>Active</td>
                                <td>

                                    <a class="btn btn-danger btn-sm" href="Authorization/Change">
                                        <i class="fas fa-trash"></i> Take the Role
                                    </a>
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" href="#">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Change the Role
                                    </a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <br />
        </div>
    </div>
    <a href="/Authorization/AddAdmin" class="btn btn-primary">Add a new Admin</a>
</section>
