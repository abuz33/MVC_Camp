@model EntityLayer.Concrete.Message

@{
    ViewBag.Title = "NewMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Send A New Message</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Compose</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            @Html.Action("MessageListMenu", "WriterPanelMessage")
            <!-- /.col -->
            <div class="col-md-9">
                @using (Html.BeginForm("NewMessage", "WriterPanelMessage", FormMethod.Post))
                {
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Compose New Message</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="form-group">
                                @Html.Label("Receiver Mail")
                                @Html.TextBoxFor(x => x.ReceiverMail, new { @class = "form-control", @placeholder = "Receiver Mail" })
                                @Html.ValidationMessageFor(x => x.ReceiverMail, null, new { @class = "text-red" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Subject")
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Enter the subject" })
                                @Html.ValidationMessageFor(x => x.Subject, null, new { @class = "text-red" })
                            </div>
                            <div class="form-group">
                                @Html.Label("Add Your Message")
                                @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", @id = "compose-textarea" })
                                @Html.ValidationMessageFor(x => x.MessageContent, null, new { @class = "text-red" })
                            </div>
                            <div class="form-group">
                                <div class="btn btn-default btn-file">
                                    <i class="fas fa-paperclip"></i> Attachment
                                    <input type="file" name="attachment">
                                </div>
                                <p class="help-block">Max. 32MB</p>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="submit" name="button" value="draft" class="btn btn-default"><i class="fas fa-pencil-alt"></i>Draft</button>
                                <button type="submit" name="button" value="send" class="btn btn-primary"><i class="far fa-envelope"></i>Send</button>
                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                }
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>

