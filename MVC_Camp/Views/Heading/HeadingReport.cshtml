@using EntityLayer.Concrete
@model List<Heading>

@{
    ViewBag.Title = "Bootstrap 4 Responsive Datatable and Export to PDF, CSV";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table id="example" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
    <thead>
        <tr>
            <th>Heading Id</th>
            <th>Heading Name</th>
            <th>Heading Created Date</th>
            <th>Writer Name</th>
            <th>Category</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.HeadingId</td>
                <td>@x.HeadingName</td>
                <td>@x.HeadingCreateDateTime</td>
                <td>@x.Writer.WriterName @x.Writer.WriterLastname </td>
                <td>@x.Category.CategoryName</td>
                <td>@x.HeadingStatus</td>
            </tr>
        }

    </tbody>
</table>